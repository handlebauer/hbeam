{
	"name": "hbeam",
	"version": "0.1.2",
	"description": "A 1-to-1 end-to-end encrypted pipe over HyperDHT.",
	"keywords": [
		"cli",
		"dht",
		"encryption",
		"hyperdht",
		"p2p"
	],
	"license": "MIT",
	"bin": {
		"hbeam": "./dist/cli.mjs"
	},
	"files": [
		"dist",
		"README.md"
	],
	"type": "module",
	"scripts": {
		"build": "tsdown src/cli.ts --format esm --platform node --out-dir dist --sourcemap --clean --external sodium-universal --external udx-native",
		"check": "bun run scripts/checks",
		"fmt": "oxfmt",
		"lint": "oxlint",
		"prepack": "bun run build",
		"prepare": "test -w .git/config && husky || true",
		"prepublishOnly": "bun run check && bun run build",
		"pub": "bun run scripts/repo/publish",
		"test": "bun test"
	},
	"dependencies": {
		"b4a": "^1.6.7",
		"colorette": "^2.0.20",
		"hi-base32": "^0.5.1",
		"hyperdht": "^6.20.5",
		"mri": "^1.2.0",
		"queue-tick": "^1.0.1",
		"sodium-universal": "^5.0.1",
		"streamx": "^2.22.0"
	},
	"devDependencies": {
		"@inquirer/prompts": "^8.2.0",
		"@types/bun": "latest",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"oxfmt": "^0.28.0",
		"oxlint": "^1.43.0",
		"tsdown": "^0.20.3"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"engines": {
		"node": ">=20"
	}
}
